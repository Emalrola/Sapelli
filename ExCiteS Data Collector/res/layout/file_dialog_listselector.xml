<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled -->
    <item android:state_enabled="true" android:state_selected="true"><shape>
            <solid android:color="@color/selected" />
        </shape></item>
    <!-- Focused -->
    <item android:state_focused="true" android:state_selected="false"><shape>
            <solid android:color="@color/focused" />
        </shape></item>

    <!-- Pressed -->
    <item android:state_focused="false" android:state_selected="true"><shape>
            <solid android:color="@color/selected" />
        </shape></item>

</selector>