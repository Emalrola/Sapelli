<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="uk.ac.excites.sender"
	android:versionCode="1"
	android:versionName="1.0.0"
>
	<!-- http://developer.android.com/reference/android/Manifest.permission.html -->
	<!-- Allows an application to read or write the system settings. -->
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<!-- Allows read only access to phone state. -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.BROADCAST_SMS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-sdk
		android:minSdkVersion="10"
		android:targetSdkVersion="15" />
	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
	>
		<activity
			android:name=".BackgroundActivity"
			android:label="@string/title_activity_main"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Preferences">
		</activity>
		<activity android:name=".sms.SMS">
		</activity>
		<activity android:name=".sms.SmsShow">
		</activity>
		<!-- http://www.apriorit.com/our-company/dev-blog/227-handle-sms-on-android -->
		<receiver
			android:name=".sms.SmsReceiver"
			android:exported="true"
		>
			<intent-filter android:priority="9999999999">
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
		<receiver
			android:name=".sms.BinarySMSReceiver"
			android:exported="true"
		>
			<intent-filter android:priority="9999999999">
				<action android:name="android.intent.action.DATA_SMS_RECEIVED" />
				<data android:port="2013" />
				<data android:scheme="sms" />
			</intent-filter>
		</receiver>
		<service
			android:name=".BackgroundService"
			android:icon="@drawable/ic_launcher"
			android:label="@string/service_name"
			android:process=":connectivity_service"
		>
		</service>
	</application>
</manifest>