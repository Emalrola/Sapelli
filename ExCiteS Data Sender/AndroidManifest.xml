<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.excites.transmission.snd"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.BROADCAST_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="10" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".SMS"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SmsShow" >
        </activity>

        <!-- http://www.apriorit.com/our-company/dev-blog/227-handle-sms-on-android -->
        <receiver
            android:name=".SmsReceiver"
            android:exported="true" >
            <intent-filter android:priority="9999999999" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".BinarySMSReceiver"
            android:exported="true" >
            <intent-filter android:priority="9999999999" >
                <action android:name="android.intent.action.DATA_SMS_RECEIVED" />

                <data android:port="2013" />
                <data android:scheme="sms" />
            </intent-filter>
        </receiver>
    </application>

</manifest>