<?xml version="1.0" encoding="UTF-8"?>
<SapelliCollectorProject format="2" name="FPP DRC" variant="prototype" id="400" version="0.8" startForm="Splash">
  <Configuration>
    <Transmission>
      <!-- TODO -->
    </Transmission>
    <Logging enabled="true"/>
  </Configuration>
  
  <Strings>
    <Locale id="en" default="true">
      <string name="test1">one two three</string>
    </Locale>
    
    <Locale id="fr">
      <string name="test1">un deux trois</string>
    </Locale>
  </Strings>

  <Form id="Splash" skipOnBack="true" next="NEXTFORM">
    <Trigger fixedTimer="5" key="ANY" jump="_END"/>
    <Choice id="FPPLogo" noColumn="true" rows="1" cols="1">
      <Choice img="FPP_logo.jpg" alt="Forest Peoples Programme"/>
    </Choice>
  </Form>
  
  <Form id="Entry" startField="SessionKey" end="_LOOP" endVibrate="true" showBack="true" showCancel="true" storeEndTime="true">
    
    <!-- source="localCreate|localSelect|remoteQR|remoteBT|remoteSMS|remoteHTTP" ? -->
    <BelongsTo id="SessionKey" form="Session" source="localCreate" hold="true" skipOnBack="true" optional="false" updateStartTimeUponLeave="true" saveBeforeFormChange="false">
      <Constraint column="closed" notEqual="true"/>
    </BelongsTo>
  
    <Choice id="Type" optional="false" rows="3" cols="1">
      <Choice alt="Edit session" jump="SessionKey">
        <Argument param="edit" value="true"/>
      </Choice>
      <Choice alt="Area delineation waypoint" img="Waypoint.png"/>
      <Choice alt="Resources/Sites" img="Resources-Sites.png" rows="3" cols="1">
        <Choice alt="Farming" img="Farming.png" rows="3" cols="1">
          <Choice alt="Annual farming" img="Annual farming.png" rows="3" cols="2">
            <Choice value="AF#1" alt="Annual farming #1 (placeholder)"/>
            <Choice value="AF#2" alt="Annual farming #2 (placeholder)"/>
            <Choice value="AF#3" alt="Annual farming #3 (placeholder)"/>
            <Choice value="AF#4" alt="Annual farming #4 (placeholder)"/>
            <Choice value="AF#5" alt="Annual farming #5 (placeholder)"/>
            <Choice value="AF#6" alt="Annual farming #6 (placeholder)"/>
          </Choice>
          <Choice alt="Perrenial farming" img="Perrenial farming.png" rows="3" cols="2">
            <Choice value="PF#1" alt="Perrenial farming #1 (placeholder)"/>
            <Choice value="PF#2" alt="Perrenial farming #2 (placeholder)"/>
            <Choice value="PF#3" alt="Perrenial farming #3 (placeholder)"/>
            <Choice value="PF#4" alt="Perrenial farming #4 (placeholder)"/>
            <Choice value="PF#5" alt="Perrenial farming #5 (placeholder)"/>
            <Choice value="PF#6" alt="Perrenial farming #6 (placeholder)"/>
          </Choice>
          <Choice alt="Livestock farming" img="Livestock farming.png" rows="3" cols="2">
            <Choice value="LF#1" alt="Livestock farming #1 (placeholder)"/>
            <Choice value="LF#2" alt="Livestock farming #2 (placeholder)"/>
            <Choice value="LF#3" alt="Livestock farming #3 (placeholder)"/>
            <Choice value="LF#4" alt="Livestock farming #4 (placeholder)"/>
            <Choice value="LF#5" alt="Livestock farming #5 (placeholder)"/>
            <Choice value="LF#6" alt="Livestock farming #6 (placeholder)"/>
          </Choice>
        </Choice>
        <Choice alt="Forest" img="Forest.png" rows="2" cols="1">
          <Choice alt="Hunting" img="Hunting.png" rows="3" cols="2">
            <Choice value="Hunt#1" alt="Hunting #1 (placeholder)"/>
            <Choice value="Hunt#2" alt="Hunting #2 (placeholder)"/>
            <Choice value="Hunt#3" alt="Hunting #3 (placeholder)"/>
            <Choice value="Hunt#4" alt="Hunting #4 (placeholder)"/>
            <Choice value="Hunt#5" alt="Hunting #5 (placeholder)"/>
            <Choice value="Hunt#6" alt="Hunting #6 (placeholder)"/>
          </Choice>
          <Choice alt="Gathering" img="Gathering.png" rows="3" cols="2">
            <Choice value="Gather#1" alt="Gathering #1 (placeholder)"/>
            <Choice value="Gather#2" alt="Gathering #2 (placeholder)"/>
            <Choice value="Gather#3" alt="Gathering #3 (placeholder)"/>
            <Choice value="Gather#4" alt="Gathering #4 (placeholder)"/>
            <Choice value="Gather#5" alt="Gathering #5 (placeholder)"/>
            <Choice value="Gather#6" alt="Gathering #6 (placeholder)"/>
          </Choice>
        </Choice>
        <Choice alt="People" img="People.png" row="3" cols="2">
          <Choice value="People#1" alt="People #1 (placeholder)"/>
          <Choice value="People#2" alt="People #2 (placeholder)"/>
          <Choice value="People#3" alt="People #3 (placeholder)"/>
          <Choice value="People#4" alt="People #4 (placeholder)"/>
          <Choice value="People#5" alt="People #5 (placeholder)"/>
          <Choice value="People#6" alt="People #6 (placeholder)"/>
        </Choice>
      </Choice>
    </Choice>

    <Location id="Position"/>
    
  </Form>
    
  <Form id="Session" storeEndTime="true" next="PREVFORM">

    <Page skipOnBack="true" showOnCreate="false" showOnEdit="true">
       <Label caption="Press ... within 5 seconds to access the Session form"/>
       <Trigger key="VOLUME_DOWN" jump="SessionPage"/>
       <Trigger fixedTimer="5" jump="_PREVFORM"/>
    </Page>
    
    <Page id="SessionPage" showForward="false">

      <Label caption="Create community session" scale="1.75" centered="true" showOnEdit="false"/>
      <Label caption="Edit community session" scale="1.75" centered="true" showOnCreate="false"/>

      <Text id="Creator" caption="Creator:" minLength="2" maxLength="48" autoCaps="words" optional="false"/>

      <MultiList id="Community" captions="Province:;Community:" optional="false" editable="false" preSelectDefault="false">
        <Item value="Province 1">
          <Item value="Community P1.1"/>
          <Item value="Community P1.2"/>
          <Item value="Community P1.3"/>
          <Item value="New P1 community (see comment)"/>
        </Item>
        <Item value="Province 2">
          <Item value="Community P2.1"/>
          <Item value="Community P2.2"/>
          <Item value="Community P2.3"/>
          <Item value="Community P2.4"/>
          <Item value="Community P2.5"/>
          <Item value="Community P2.6"/>
          <Item value="Community P2.7"/>
          <Item value="Community P2.8"/>
          <Item value="New P2 community (see comment)"/>
        </Item>
      </MultiList>

      <Check id="Operational" caption="Operational session" defaultValue="true"/>

      <Check id="Testing" caption="Testing session" defaultValue="false"/>

      <Check id="Training" caption="Training session" defaultValue="false"/>

      <Text id="Comment" caption="Comments:" maxLength="1024" autoCaps="sentences" multiLine="true" optional="true"/>

      <Button caption="Start session" showOnEdit="false" jump="_SAVE+PREVFORM"/>
      
      <Button caption="Continue session" showOnCreate="false" jump="_SAVE+PREVFORM"/>
      
      <Button id="closed" column="boolean" optional="true" caption="Close session" showOnCreate="false" jump="_SAVE+PREVFORM"/>
  
    </Page>
  
  </Form>
  
</SapelliCollectorProject>
