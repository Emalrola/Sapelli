<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/drop_shadow"
	        android:padding="10dp"
	        android:gravity="start|top"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/lblProjectInfo"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="4dp"
	            android:paddingStart="4dp"
	            android:paddingLeft="4dp"
	            android:paddingEnd="0dp"
	            android:paddingRight="0dp"
	            android:gravity="start"
	            android:text="@string/info"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <TableLayout
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:paddingLeft="15dp"
	            android:paddingStart="15dp"
	            android:paddingRight="5dp"
	            android:paddingEnd="5dp"
	            android:paddingTop="5dp" >
	
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/name"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectName"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/variant"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectVariant"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	            
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/version"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectVersion"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	            
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/id"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectID"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	            
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/fingerprint"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectFingerPrint"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/modelID"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectModelID"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	            
	            <TableRow
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <TextView
	                    android:gravity="end"
	                    android:paddingLeft="0dp"
	                    android:paddingStart="0dp"
	                    android:paddingRight="7dp"
	                    android:paddingEnd="7dp"
	                    android:text="@string/numForms"
	                    android:textColor="@color/black" />
	
	                <TextView
	                    android:id="@+id/lblProjectNumberOfForms"
	                    android:textColor="@color/colorPrimaryDark" />
	            </TableRow>
	        </TableLayout>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/drop_shadow"
	        android:padding="10dp"
	        android:gravity="start|top"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/lblProjectStats"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="4dp"
	            android:paddingStart="4dp"
	            android:paddingLeft="4dp"
	            android:paddingEnd="0dp"
	            android:paddingRight="0dp"
	            android:gravity="start"
	            android:text="@string/statistics"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    </LinearLayout>
	    
	</LinearLayout>

</ScrollView>