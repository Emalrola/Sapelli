<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#28A5C9" android:startColor="#28A5C9" />

            <stroke android:width="1dp" android:color="#FFFFFF" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF9900" android:startColor="#FFD699" />

            <stroke android:width="1dp" android:color="#FF9900" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>