<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/Packager.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.ucl.excites.sapelli.packager.ui.Controller">

	<!--AnchorPane children-->
	<children>

		<!-- Directory label -->
		<Label fx:id="labelDirectory" minHeight="35" prefHeight="35" text="Please select the working directory of the Sapelli project" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0" />

		<!-- Browse Button-->
		<Button fx:id="buttonBrowse" minHeight="35" mnemonicParsing="false" onAction="#onBrowseButtonClicked" prefHeight="35" text="Browse" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <Accordion fx:id="accordion" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
        <panes>
          <TitledPane fx:id="accordionProjectXML" styleClass="accordion-default" disable="true" text="PROJECT.xml">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
          <TitledPane fx:id="accordionImg" animated="false" styleClass="accordion-default" disable="true" text="img">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
          <TitledPane fx:id="accordionSnd" animated="false" styleClass="accordion-default" disable="true" text="snd">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
            <TitledPane fx:id="accordionResources" animated="false" styleClass="accordion-default" disable="true" text="resources">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </TitledPane>
        </panes>
      </Accordion>


	</children>
</AnchorPane>
