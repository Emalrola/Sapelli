<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
			stylesheets="@css/Packager.css" xmlns="http://javafx.com/javafx/8.0.112"
			xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="uk.ac.ucl.excites.sapelli.packager.Controller">

	<!--AnchorPane children-->
	<children>

		<!-- Directory label -->
		<Label fx:id="labelDirectory" prefHeight="35" minHeight="35"
			   text="Please select the working directory of the Sapelli project"
			   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0"
			   AnchorPane.topAnchor="0.0"/>

		<!-- Browse Button-->
		<Button fx:id="buttonBrowse" mnemonicParsing="false" prefHeight="35" minHeight="35"
				onAction="#onBrowseButtonClicked" text="Browse" AnchorPane.rightAnchor="0.0"
				AnchorPane.topAnchor="0.0"/>


	</children>
</AnchorPane>
