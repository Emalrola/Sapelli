		</styleClass>
		<!-- Directory label -->
		<Label fx:id="workingDirectoryLabel" text="Please select the working directory of the Sapelli project" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />

		<!-- Browse Button-->
		<JFXButton fx:id="buttonBrowse" mnemonicParsing="false" onAction="#onBrowseButtonClicked" styleClass="button-raised" text="%browse" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
