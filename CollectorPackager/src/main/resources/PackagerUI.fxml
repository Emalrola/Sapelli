<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
			stylesheets="@css/Packager.css" xmlns="http://javafx.com/javafx/8.0.111"
			xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="uk.ac.ucl.excites.sapelli.packager.ui.Controller">

	<!--AnchorPane children-->
	<children>

		<AnchorPane fx:id="workingDirectoryBackground" prefHeight="50.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<!-- Directory label -->
				<Label fx:id="workingDirectoryLabel"
					   text="Please select the working directory of the Sapelli project"
					   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					   AnchorPane.topAnchor="0.0"/>

				<!-- Browse Button-->
				<Button fx:id="buttonBrowse" mnemonicParsing="false"
						onAction="#onBrowseButtonClicked" text="Browse"
						AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
						AnchorPane.topAnchor="0.0"/>
			</children>
			<styleClass>
				<String fx:value="box-with-padding"/>
				<String fx:value="working-dir-default"/>
			</styleClass>
		</AnchorPane>

		<AnchorPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="50.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="50.0">
			<children>
				<Label fx:id="warningLabel" prefHeight="50.0" AnchorPane.leftAnchor="0.0"
					   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<styleClass>
						<String fx:value="box-with-padding"/>
						<String fx:value="warning-default"/>
					</styleClass>
				</Label>
				<ScrollPane layoutX="-1.0" layoutY="50.0" prefHeight="473.0"
							prefWidth="849.0" AnchorPane.bottomAnchor="0.0"
							AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="50.0">
					<styleClass>
						<String fx:value="box-with-padding"/>
					</styleClass>
					<content>
						<TextFlow fx:id="messageLabel" maxHeight="1.7976931348623157E308"
							   maxWidth="1.7976931348623157E308">
						</TextFlow>
					</content>
				</ScrollPane>

			</children>
		</AnchorPane>
		<StackPane id="package-container" prefHeight="50.0" AnchorPane.bottomAnchor="0.0"
				   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
			<children>
				<Button id="package-button" fx:id="packageButton" disable="true"
						mnemonicParsing="false" onAction="#onPackageButtonClicked" text="Package"/>
			</children>
		</StackPane>


	</children>
</AnchorPane>
